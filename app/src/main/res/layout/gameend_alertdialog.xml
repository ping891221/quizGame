<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="你的結算"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/level_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/level_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="LV +1"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/money_add"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/money_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="💰 +10"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/heart_add_or_delete"
            app:layout_constraintEnd_toEndOf="@+id/level_add"
            app:layout_constraintStart_toStartOf="@+id/level_add"
            app:layout_constraintTop_toBottomOf="@+id/level_add" />

        <TextView
            android:id="@+id/heart_add_or_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="❤️ +1"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/all_button"
            app:layout_constraintEnd_toEndOf="@+id/money_add"
            app:layout_constraintStart_toStartOf="@+id/money_add"
            app:layout_constraintTop_toBottomOf="@+id/money_add" />

        <LinearLayout
            android:id="@+id/all_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heart_add_or_delete">

            <ImageButton
                android:id="@+id/not_now"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/playagain"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/notnow" />

            <ImageButton
                android:id="@+id/play_again"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/playagain"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/play_again" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>