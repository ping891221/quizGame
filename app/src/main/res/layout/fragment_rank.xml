<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rank">

    <!-- TODO: Update blank fragment layout -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/second_student"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/second_head"
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            android:layout_weight="1"
                            android:src="@drawable/initial"
                            app:civ_border_color="#595858"
                            app:civ_border_width="3dp" />


                        <TextView
                            android:id="@+id/second_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:text="110813060"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/second_gold"
                                    android:layout_width="30dp"
                                    android:layout_height="45dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/gold" />

                                <TextView
                                    android:id="@+id/second_gold_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:text="2"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/second_silver"
                                    android:layout_width="30dp"
                                    android:layout_height="45dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/silver" />

                                <TextView
                                    android:id="@+id/second_silver_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:text="3"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/second_copper"
                                    android:layout_width="30dp"
                                    android:layout_height="45dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/copper" />

                                <TextView
                                    android:id="@+id/second_copper_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="1"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/second_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:text="@string/money"
                                    android:textSize="30sp" />

                                <TextView
                                    android:id="@+id/second_money_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="1000"
                                    android:textSize="20sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/first_student"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/first_head"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_weight="1"
                            android:src="@drawable/initial"
                            app:civ_border_color="#595858"
                            app:civ_border_width="3dp" />

                        <TextView
                            android:id="@+id/first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="110813060"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/first_gold"
                                    android:layout_width="40dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/gold" />

                                <TextView
                                    android:id="@+id/first_gold_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:text="2"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/first_silver"
                                    android:layout_width="40dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/silver" />

                                <TextView
                                    android:id="@+id/first_silver_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:text="3"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/first_copper"
                                    android:layout_width="40dp"
                                    android:layout_height="60dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/copper" />

                                <TextView
                                    android:id="@+id/first_copper_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="1"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/first_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:text="@string/money"
                                    android:textSize="40sp" />

                                <TextView
                                    android:id="@+id/first_money_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="1000"
                                    android:textSize="20sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/third_student"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/third_head"
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            android:layout_weight="1"
                            android:src="@drawable/initial"
                            app:civ_border_color="#595858"
                            app:civ_border_width="3dp" />


                        <TextView
                            android:id="@+id/third_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:text="110813060"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/third_gold"
                                    android:layout_width="30dp"
                                    android:layout_height="45dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/gold" />

                                <TextView
                                    android:id="@+id/third_gold_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:text="2"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/third_silver"
                                    android:layout_width="30dp"
                                    android:layout_height="45dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/silver" />

                                <TextView
                                    android:id="@+id/third_silver_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:text="3"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/third_copper"
                                    android:layout_width="30dp"
                                    android:layout_height="45dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/copper" />

                                <TextView
                                    android:id="@+id/third_copper_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="1"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/third_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:text="@string/money"
                                    android:textSize="30sp" />

                                <TextView
                                    android:id="@+id/third_money_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="1000"
                                    android:textSize="20sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rank_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>



</FrameLayout>