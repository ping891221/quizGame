<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/badge_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/badge_background1">

    <LinearLayout
        android:id="@+id/gold_all_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/silver_all_1"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/gold_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gold96" />

        <TextView
            android:id="@+id/gold_number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/silver_all_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/copper_all_1"
        app:layout_constraintStart_toEndOf="@+id/gold_all_1">

        <ImageView
            android:id="@+id/silver_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/silver96" />

        <TextView
            android:id="@+id/silver_number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/copper_all_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/silver_all_1">

        <ImageView
            android:id="@+id/copper_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/copper96" />

        <TextView
            android:id="@+id/copper_number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <TextView
        android:id="@+id/describe_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>