<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pra_background"
    tools:context=".prac_type">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/re_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/re_button"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/topic1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/topic1"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/topic2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/topic2"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/topic3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/topic3"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                />

            <ImageButton
                android:id="@+id/topic4"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/topic4"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>