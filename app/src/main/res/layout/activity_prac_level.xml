<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level_background1"
    tools:context=".prac_level">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/reButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@android:color/transparent"
                    android:gravity="start"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/re_button" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" /> <!-- 空間來擴展剩餘的區域 -->


                <ImageButton
                    android:id="@+id/level1"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="30dp"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lock1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/level2"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lock1" />

                <ImageButton
                    android:id="@+id/level3"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lock1" />

                <ImageButton
                    android:id="@+id/level4"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lock1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/level5"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lock1" />

                <ImageButton
                    android:id="@+id/level6"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lock1" />

                <ImageButton
                    android:id="@+id/level7"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lock1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/level8"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lock1" />

                <ImageButton
                    android:id="@+id/level9"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lock1" />

                <ImageButton
                    android:id="@+id/level10"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lock1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>